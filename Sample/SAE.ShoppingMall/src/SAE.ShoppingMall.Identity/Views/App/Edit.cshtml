@model AppDto
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">修改应用</h3>
            </div>
            <form method="post" data-ajax="true" data-ajax-success="requestSuccess">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name">应用名称</label>
                        <input type="text" class="form-control required" asp-for="Name" rangelength="[2,24]" placeholder="请输入名称">
                    </div>
                    <div class="form-group">
                        <label asp-for="AppId">AppId</label>
                        <input type="text" class="form-control required" asp-for="AppId" readonly="readonly">
                    </div>
                    <div class="form-group">
                        <label asp-for="AppSecret">AppSecret</label>
                        <input type="text" class="form-control required" asp-for="AppSecret" regexp="[a-zA-Z\d-]{6,36}">
                    </div>
                    <div class="form-group">
                        <label asp-for="Signin">登入回调</label>
                        <input type="text" class="form-control url required" asp-for="Signin" placeholder="请输入登入回调">
                    </div>
                    <div class="form-group">
                        <label asp-for="Signout">登出回调</label>
                        <input type="text" class="form-control url required" asp-for="Signout" placeholder="请输入登出回调">
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-danger pull-right" asp-action="index">Cancel</a>
                </div>
            </form>
        </div>


    </div>

</div>