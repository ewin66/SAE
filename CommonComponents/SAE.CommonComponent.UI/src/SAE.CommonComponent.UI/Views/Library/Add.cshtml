@model Library
<div class="row">
    <div class="col-md-12 box box-success">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">创建类库</h3>
            </div>
            <input serialize="Dependencies" type="hidden" />
            <form method="post" data-ajax="true" class="form-horizontal" data-ajax-success="requestSuccess">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name">类库名称</label>
                        <input type="text" class="form-control required" asp-for="Name" rangelength="[2,24]" placeholder="请输入名称">
                    </div>
                    <div class="form-group">
                        <label asp-for="Path">引用地址</label>
                        <input type="text" class="form-control required" asp-for="Path" rangelength="[2,128]" placeholder="请输入名称">
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-default btn-success" id="btn_dependencies" >添加依赖</button>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-danger pull-right" asp-action="index">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</div>
