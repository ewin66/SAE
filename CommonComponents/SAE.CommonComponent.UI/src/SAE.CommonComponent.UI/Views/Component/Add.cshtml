@model Component
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Quick Example</h3>
            </div>
            <form method="post" data-ajax="true" class="form-horizontal" data-ajax-success="requestSuccess">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="Name">组件名称</label>
                        <input type="text" class="form-control required" asp-for="Name" rangelength="[2,24]" placeholder="请输入名称">
                    </div>
                    <div class="form-group">
                        <label asp-for="Type">类型</label>
                        <span id="type"></span>
                    </div>
                    <div class="form-group">
                        <label>组件</label>
                        <button type="button" class="btn btn-info">选择组件</button>
                    </div>
                    <div class="form-group" id="components">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-danger">Action</button>
                            </div>
                            <!-- /btn-group -->
                            <input type="checkbox" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>编辑代码</label>
                        <textarea class="form-control" rows="3" placeholder="Enter ...">
                        </textarea>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-danger pull-right" asp-action="index">Cancel</a>
                </div>
            </form>
        </div>


    </div>

</div>