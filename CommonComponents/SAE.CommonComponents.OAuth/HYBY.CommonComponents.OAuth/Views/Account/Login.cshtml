@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon">
    <!-- iCheck -->
    <link asp-min href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link asp-min href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link asp-min href="~/lib/Ionicons/css/ionicons.css" rel="stylesheet" />
    <link asp-min href="~/lib/AdminLTE/dist/css/AdminLTE.css" rel="stylesheet" />
    <link href="~/lib/AdminLTE/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="/">
                <img src="~/images/r_x_logo.jpg" />
            </a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign In</p>

            <form method="post"  >
                <div class="form-group has-feedback">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Account" name="name" value="mypjb">
                    <span class="fa fa-user form-control-feedback" style="font-size:19px"></span>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group has-feedback">
                    <input asp-for="Password" type="password" class="form-control" name="password" placeholder="Password" value="Aa123456">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="row">

                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

        </div>
        <!-- /.login-box-body -->
    </div>




    <script asp-min src="~/lib/jquery/dist/jquery.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script asp-min src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script asp-min src="~/lib/AdminLTE/plugins/iCheck/icheck.js"></script>
    <script asp-min src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script asp-min src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script>

        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
